<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uy.quizdec7.MainActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="30dp"
        android:text="Username:"/>


    <EditText
        android:textAlignment="center"
        android:id="@+id/etUser"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:layout_centerVertical="true" />

    <TextView
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etUser"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:text="Password:"/>

    <EditText
        android:textAlignment="center"
        android:id="@+id/etPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etUser"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:password="true"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/buttonRememberMe"
        android:onClick="buttonRemember"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Remember Me"
        android:layout_marginLeft="60dp"
        android:layout_alignBaseline="@+id/buttonLogin"
        android:layout_alignBottom="@+id/buttonLogin"
        android:layout_alignStart="@+id/etPassword"
        android:layout_marginStart="21dp" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassword"
        android:layout_toRightOf="@id/buttonRememberMe"
        android:text="Login"
        android:layout_marginTop="20dp"
        android:onClick="buttonLogin"
        android:layout_marginLeft="0dp"/>


</RelativeLayout>
